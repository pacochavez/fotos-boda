@import('normalize.styl')
body 
	background #dbdaca url("style/bg-sand.png")
	font-family "arial"
	header
		background #0467a0
		border-bottom #fff 5px solid
		height: 96px
		.wrapper
			figure
				width 230px
				display inline-block
				margin 5px
				img
					width 85px
					display inline-block
					vertical-align middle
				h1
					vertical-align middle
					display inline-block
					font-size 1.2em
					color #fff
					font-family 'Alex Brush', cursive
					margin-left 5px
			nav
				vertical-align middle
				display inline-block
				width 600px
				ul
					text-align center
					li 
						display inline-block
						margin 5px
	section.fotos
		div#messages
			text-align center
			div
				display inline-block
				margin 10px
				width 250px
				margin 10px
				img
					width 245px 
					border-radius 20px
					border 5px solid #fff
					&:hover
						border 5px solid #0878ac
						
					