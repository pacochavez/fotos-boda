@import('normalize.styl')
body 
	background #dbdaca url("style/bg-sand.png")
	font-family "arial"
	header
		background #0467a0
		border-bottom #fff 5px solid
		height: 96px
		.wrapper
			figure
				width 230px
				display inline-block
				margin 5px
				img
					width 85px
					display inline-block
					vertical-align middle
				h1
					vertical-align middle
					display inline-block
					font-size 1.2em
					color #fff
					font-family 'Alex Brush', cursive
					margin-left 5px
			nav
				vertical-align middle
				display inline-block
				float right
				ul
					text-align center
					li 
						display none
						margin 5px
						&.btn-pic
							background #0878ac
							border-radius: 15px
							color #fff
							cursor pointer
							font-size 18px
							padding 9px 5px 
							text-decoration none
							&.active
								display inline-block
							&:hover
								background #0878ac
							&.progress
									width 200px
							&.upload
								background #00a203
							&.login
								background #4c69ba
								background -webkit-gradient(linear, center top, center bottom, from(#4c69ba), to(#3b55a0))
								background -webkit-linear-gradient(#4c69ba, #3b55a0)
								border-color #4c69ba
								cur						
								&:hover
									background -webkit-gradient(linear, center top, center bottom, from(#5b7bd5), to(#4864b1))
									background -webkit-linear-gradient(#5b7bd5, #4864b1)
									border-bottom-color #41599f
									border-left-color #4961a8
									border-right-color #4961a8
									border-top-color #5874c3
									-webkit-box-shadow inset 0 1px 0 #607fd6
									cursor default
						a
							color #fff
							text-decoration none
							display block
						.bar
							height 13px
							display inline-block

							
	section.fotos
		div#messages
			text-align center
			div
				display inline-block
				margin 10px
				width 250px
				margin 10px
				img
					width 245px 
					border-radius 20px
					border 5px solid #fff
					&:hover
						border 5px solid #0878ac
						
					