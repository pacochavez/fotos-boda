-var id
-var id_usuario
-var imagen 
-var type
-var nombre
each value, i in name
	each num,e in value
		if (e == 'id')
			-id = num
		if (e == 'id_usuario')
			-id_usuario = num
		if (e == 'imagen')
			-imagen = num
		if (e == 'type')
			-type = num
		if (e == 'name')
			-nombre = "fotos de "+num
	div(id="imagen_#{id}")
		a(href='/fotos/#{id}')
			img(src='/thumbnail/#{imagen}',onload='imagen_load("imagen_#{id}")')